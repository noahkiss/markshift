{
  "name": "markshift",
  "version": "1.0.1",
  "description": "A suite of tools for converting text to and from Markdown format",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "markshift": "./dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noahkiss/markshift.git"
  },
  "bugs": {
    "url": "https://github.com/noahkiss/markshift/issues"
  },
  "homepage": "https://github.com/noahkiss/markshift#readme",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:web": "vite build",
    "cli": "tsx src/cli/index.ts",
    "dev": "tsx watch src/index.ts",
    "dev:web": "vite --port 6275",
    "serve:web": "npx serve docs -l 6275",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "html",
    "converter",
    "text",
    "clipboard"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.6",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@crosscopy/clipboard": "^0.2.8",
    "@iarna/rtf-to-html": "^1.1.0",
    "@mozilla/readability": "^0.6.0",
    "@truto/turndown-plugin-gfm": "^1.0.2",
    "commander": "^14.0.2",
    "dompurify": "^3.3.1",
    "is-html": "^3.2.0",
    "linkedom": "^0.18.12",
    "marked": "^17.0.1",
    "turndown": "^7.2.2"
  }
}
